div#mySlider.carousel.slide(data-ride="carousel")
    
    div.carousel-indicators
      
      button(type="button", data-bs-target="#mySlider", data-bs-slide-to="0", class="active", aria-current="true", aria-label="Slide 1") 
      button(type="button", data-bs-target="#mySlider", data-bs-slide-to="1", aria-label="Slide 2")
      button(type="button", data-bs-target="#mySlider", data-bs-slide-to="2", aria-label="Slide 3")
    
    div.carousel-inner
      
      div.carousel-item.active
        img(src="../img/slider1.jpg", alt="", class="d-block img-fluid")
      
      div.carousel-item
        img(src="../img/slider2.webp", alt="", class="d-block img-fluid")
      
      div.carousel-item
        img(src="../img/slider3.jpeg", alt="", class="d-block img-fluid")
    
    button.carousel-control-prev(type="button", data-bs-target="#mySlider", data-bs-slide="prev")
      
      span.carousel-control-prev-icon(aria-hidden="true")
      span.visually-hidden Previous
    
    button.carousel-control-next(type="button", data-bs-target="#mySlider", data-bs-slide="next")
      
      span.carousel-control-next-icon(aria-hidden="true")
      span.visually-hidden Next