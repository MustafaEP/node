extends layouts/main-layout.pug 

block styles
    link(rel="stylesheet", href="../css/form.css")

block content
    form(action="/admin/add-product" method="POST")
        .mb-3
            label(for="name").form-label Product Name
            input(type="text" name="name" class="form-control" id="name")                     
        
        .mb-3
            label(for="price").form-label Price
            input(type="text" name="price" class="form-control" id="price") 
                    
        .mb-3
            label(for="image").form-label Image 
            input(type="text" name="image" class="form-control" id="image") 
                    
        .mb-3
            label(for="description").form-label Description
            input(type="text" name="description" class="form-control" id="description") 
        
        button(type="submit" class="btn btn-primary" id="submitButton") Save Product
